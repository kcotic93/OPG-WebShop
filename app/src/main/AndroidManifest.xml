<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kristijan.opg_webshop">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_image"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UserAdministration.Login"
            android:screenOrientation="portrait" />
        <activity android:name=".UserAdministration.CreateAccount"
            android:screenOrientation="portrait" />
        <activity android:name=".UserAdministration.ResetPassword"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MenuHome"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" />
        <activity android:name=".UserAdministration.Profile"
            android:screenOrientation="portrait" />
        <activity android:name=".UserAdministration.Address"
            android:screenOrientation="portrait" />
        <activity android:name=".ProductList"
            android:screenOrientation="portrait" />
        <activity android:name=".ProductDetail"
            android:screenOrientation="portrait" />
        />
        <activity android:name=".Discount"
            android:screenOrientation="portrait" />
        <activity android:name=".Cart"
            android:screenOrientation="portrait" />
        <activity android:name=".Checkout"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BaseActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" />
        <activity android:name=".Search"
            android:screenOrientation="portrait" />
        <activity android:name=".MyOrders"
            android:screenOrientation="portrait" />
        <activity android:name=".OrderDetail"
            android:screenOrientation="portrait" />
        <activity android:name=".CommentActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".UserAdministration.ChangePassword"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AboutUs"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" ></activity>
        <activity android:name=".News"
            android:screenOrientation="portrait" ></activity>

        <service android:name=".Service.MyFirebaseMessaging">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"></action>
            </intent-filter>
        </service>
    </application>

</manifest>